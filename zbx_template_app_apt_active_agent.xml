<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-07-09T08:09:05Z</date>
    <groups>
        <group>
            <name>Templates/Futur-Tech/Modules Linux</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Futur-Tech App APT Linux Software Updates</template>
            <name>Template Futur-Tech App APT Linux Software Updates</name>
            <description>Only for Debian/Ubuntu&#13;
https://github.com/Futur-Tech/futur-tech-zabbix-apt</description>
            <groups>
                <group>
                    <name>Templates/Futur-Tech/Modules Linux</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Software Updates</name>
                </application>
                <application>
                    <name>Software Updates Panel</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Noncritical Updates</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>apt.upd_others</key>
                    <delay>10m</delay>
                    <history>30d</history>
                    <value_type>FLOAT</value_type>
                    <units>other update(s)</units>
                    <applications>
                        <application>
                            <name>Software Updates Panel</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>1d</params>
                        </step>
                    </preprocessing>
                </item>
                <item>
                    <name>Security Updates</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>apt.upd_security</key>
                    <delay>10m</delay>
                    <history>30d</history>
                    <value_type>FLOAT</value_type>
                    <units>security update(s)</units>
                    <applications>
                        <application>
                            <name>Software Updates Panel</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>1d</params>
                        </step>
                    </preprocessing>
                </item>
                <item>
                    <name>Log dpkg.log</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>logrt[/var/log/dpkg.log,&quot; status (?|(not-installed\ .*)|(installed\ .*))&quot;,,100,skip,\1]</key>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <description>Return packages installed and not-installed (after a successful remove).</description>
                    <applications>
                        <application>
                            <name>Software Updates</name>
                        </application>
                    </applications>
                    <logtimefmt>yyyy-MM-dd hh:mm:ss</logtimefmt>
                </item>
            </items>
        </template>
    </templates>
    <triggers>
        <trigger>
            <expression>{Template Futur-Tech App APT Linux Software Updates:apt.upd_security.last()}&gt;0 or {Template Futur-Tech App APT Linux Software Updates:apt.upd_others.last()}&gt;0</expression>
            <name>There are updates available</name>
            <opdata>{ITEM.LASTVALUE} and {ITEM.LASTVALUE2}</opdata>
            <priority>WARNING</priority>
        </trigger>
    </triggers>
</zabbix_export>
